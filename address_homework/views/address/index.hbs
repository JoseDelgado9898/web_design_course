  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Direcciones</h1>
      <p class="mt-2 text-sm text-gray-700">Todas las direcciones almacenadas en el sistema</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <button
        onclick="goToCreate()"
        type="button"
        class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
      >Agregar direcciones</button>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              {{> RowTitle title="Nombre"}}
              {{> RowTitle title="Apellido"}}
              {{> RowTitle title="Número teléfonico de Casa"}}
              {{> RowTitle title="Dirección de la casa"}}
              {{> RowTitle title="Número teléfonico del trabajo"}}
              {{> RowTitle title="Dirección del trabajo"}}
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
              {{#each address}}
            <tr>
              {{> Column content=this.name extraClass="text-sm font-medium text-gray-900 sm:pl-0"}}
              {{> Column content=this.lastName }}
              {{> Column content=this.homePhone }}
              {{> Column content=this.homeAddress}}
              {{> Column content=this.workPhone}}
              {{> Column content=this.workAddress}}
                <td
                  class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0"
                >
                  <a
                    href="/address/edit/{{this.id}}"
                    class="text-indigo-600 hover:text-indigo-900"
                  >Editar<span class="sr-only"></span></a>
              </td>
                <td
                  class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0"
                >
                  <a
                  onclick="return confirm('¿Está seguro de eliminar esta dirección?')"
                    href="/address/delete/{{this.id}}"
                    class="text-red-600 hover:text-red-900"
                  >Eliminar<span class="sr-only"></span></a>
              </td>
              {{/each}}
            </tr>

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
  function goToCreate() {
    window.location.replace("/address/create");
  }
  </script>

